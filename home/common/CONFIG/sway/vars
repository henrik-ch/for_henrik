# preferred terminal emulator
set $term wezterm
# app launcher
set $menu kickoff

# brightness/volume controls
set $brightness_up "brightnessctl set 5%+"
set $brightness_down "brightnessctl set 5%-"
set $volume_up "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2.5%+"
set $volume_down "wpctl set-volume @DEFAULT_AUDIO_SINK@ 2.5%-"
set $volume_mute "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
